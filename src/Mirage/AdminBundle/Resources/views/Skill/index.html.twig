{% extends 'MirageAdminBundle::layout.html.twig' %}
{% block contents %}
    <div id="content">
        <h1>Skill Editer</h1><br><br>
        <select id="idSelector" class="" onchange="All.changeIdSelector()">
            {% for skill in skillAll %}
                <option value="{{ skill.idSkill }}">ID. {{ skill.idSkill }} : {{ skill.idSkill |str('skill', 'name')}} </option>
            {% endfor %}
        </select>
        <button class="button accept" onclick="All.load()">스킬 불러오기</button>
        <button class="button" onclick="All.create()">스킬 신규제작</button>
        <br>

        <form id="load">
            <input id='loadId' type="number" name="id" hidden>
        </form>

        <form id="delete" action="{{url('skill_delete') }}">
            <input id='deleteId' type="number" name="id" hidden>
        </form>

        {% if editSkill is not null%}
            {% include 'MirageAdminBundle:Skill:editer.html.twig' with {"skill" : editSkill, "json" : editSkill|json_encode|raw, "form" : form, "types":types, "conditions":conditions} %}
        {%  endif %}
    </div>
{% endblock contents %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('/bundles/admin/js/jquery-2.1.4.min.js')}}" type="text/javascript"></script>
    <script src="{{asset('/bundles/admin/js/all.js')}}" type="text/javascript"></script>
    <script src="{{asset('/bundles/admin/js/skill.js')}}" type="text/javascript"></script>

{% endblock %}