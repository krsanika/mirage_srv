{% extends 'MirageAdminBundle::layout.html.twig' %}
{% block contents %}
    <div id="content">
        <h1>Ark Editer</h1><br><br>
        <select id="idSelector" class="" onchange="All.changeIdSelector()">
            {% for ark in arkAll %}
                <option value="{{ ark.idArk }}">ID. {{ ark.idArk }} : {{ ark.idArk |str('ark', 'name')}} </option>
            {% endfor %}
        </select>
        <button class="button accept" onclick="All.load()">아크 불러오기</button>
        <button class="button" onclick="All.create()">아크 신규제작</button>
        <br>

        <form id="load">
            <input id='loadId' type="number" name="id" hidden>
        </form>
        {% if editArk is not null%}
            {% include 'MirageAdminBundle:Ark:editer.html.twig' with {"ark" : editArk, "json" : editArk|json_encode|raw, "form" : form, 'tags' : tags} %}
        {%  endif %}
    </div>
{% endblock contents %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('/bundles/admin/js/jquery-2.1.4.min.js')}}" type="text/javascript"></script>
    <script src="{{asset('/bundles/admin/js/all.js')}}" type="text/javascript"></script>

{% endblock %}