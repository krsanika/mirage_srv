{% extends 'MirageAdminBundle:layout.html.twig' %}
{% block contents %}
    <div id="content">
        <h1>Encounter Editer</h1><br><br>
        <select id="encSelector" class="" onchange="Encounter.changeEncId()">
            {% for enc in encs %}
                <option value="{{ enc.encId }}">ID: {{ enc.encId }} 몹수 : {{ enc.enemyPos|length }} </option>
            {% endfor %}
        </select>
        <button class="button accept" onclick="Encounter.loadEncounter()">조우 불러오기</button>
        <button class="button">조우 신규제작</button>
        <button class="button">조우 비활성화</button>
        <button class="button cancle">조우 삭제</button>
        <br>

        <form id="load">
            <input id='loadId' type="number" name="id" hidden></input>
        </form>
        {% if editEnc is not null%}
            {% include 'MirageAdminBundle:Encounter:editer.html.twig' with {"enc" : editEnc, "json" : editEnc|json_encode|raw} %}
        {%  endif %}
    </div>
{% endblock contents %}

{% block javascripts %}
{{ parent() }}
<script src="{{asset('/bundles/admin/js/jquery-2.1.4.min.js')}}" type="text/javascript"></script>
<script src="{{asset('/bundles/admin/js/encounter.js')}}" type="text/javascript"></script>

{% endblock %}